<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_lv_processmanager_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/sjfd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_lv_processmanager_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_lv_processmanager_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_lv_processmanager_usingmemory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_lv_processmanager_isclean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:button="@drawable/cb_selector"
        android:clickable="false"
        android:focusable="false"
        android:textSize="16sp" />

</RelativeLayout>