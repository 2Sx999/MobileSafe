<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_home_gridview_selector"
    android:orientation="vertical"
    android:padding="5dip" >

    <!-- 图标 -->

    <ImageView
        android:id="@+id/iv_item_gridview_home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:src="@drawable/sjfd" />
    <!-- 两行文字 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_gridview_home_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_home_gridview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存清理" />

        <TextView
            android:id="@+id/tv_item_home_gridview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机快步如飞" />
    </LinearLayout>

</RelativeLayout>