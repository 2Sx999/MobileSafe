<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/v_locationstyledialog_color"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_marginLeft="5dip"
        android:background="@drawable/call_locate_blue" />

    <TextView
        android:id="@+id/tv_locationstyledialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/v_locationstyledialog_color"
        android:text="卫士蓝"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_locationstyledialog_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:src="@drawable/ic_selected"
        android:visibility="gone" />

</RelativeLayout>