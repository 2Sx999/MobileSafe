<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_lv_appmanager_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/sjfd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_lv_appmanager_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_lv_appmanager_appname"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_lv_appmanager_applocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lv_appmanager_appsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="33mb"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>